<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/porName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cabin_bold"
        android:padding="2dp"
        android:text="Mehfil"
        android:textColor="@color/textHeading"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="4dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="start|center"
        android:padding="2dp"
        android:text="Ordered"
        android:textColor="@color/textHeading"
        app:drawableEndCompat="@drawable/green_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_regular"
        android:text="Himayat Nagar"

        android:textColor="@color/textHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/porName" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:drawablePadding="2dp"
        android:fontFamily="@font/metropolis_regular"
        android:gravity="start|center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="$192"

        android:textColor="@color/textHeading"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poArea" />

    <ImageView
        android:id="@+id/dottedDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layerType="software"
        android:src="@drawable/dotted_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalCost" />

    <TextView
        android:id="@+id/poItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/raleway"
        android:padding="2dp"
        android:text="Chickeb Biryani Full x 1"
        android:textColor="@color/textHeading"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/dottedDivider" />

    <TextView
        android:id="@+id/poDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/metropolis_regular"
        android:padding="2dp"
        android:text="January 14, 12:41Pm"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poItems" />


    <Button
        android:id="@+id/rateFood"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metropolis_bold"
        android:text="Rate food"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poDate"

        app:strokeColor="@color/orange"
        app:strokeWidth="0.8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>