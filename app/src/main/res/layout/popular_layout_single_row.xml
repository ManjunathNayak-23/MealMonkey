<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/rImage"
        android:layout_width="match_parent"
        android:layout_height="193dp"

        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/rName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/metropolis_bold"

        android:paddingStart="11dp"
        android:paddingTop="16dp"
        android:paddingEnd="11dp"
        android:textColor="@color/textHeading"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rImage"
        tools:text="Minute by tuk tuk" />


    <TextView
        android:id="@+id/rRating"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/metropolis_regular"
        android:gravity="center"
        android:paddingStart="11dp"
        android:paddingTop="6dp"
        android:paddingEnd="22dp"
        android:paddingBottom="3dp"
        android:textColor="@color/orange"

        app:drawableStartCompat="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rName"
        tools:text="4.9" />

    <TextView

        android:id="@+id/rType"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawablePadding="12dp"
        android:fontFamily="@font/metropolis_regular"
        android:gravity="start|center"
        android:paddingTop="6dp"
        android:textColor="#B6B7B7"
        app:drawableStartCompat="@drawable/bullet_point"
        app:layout_constraintBottom_toBottomOf="@+id/rRating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rRating"
        app:layout_constraintTop_toBottomOf="@+id/rName"
        tools:text="Multi Cuisine" />

</androidx.constraintlayout.widget.ConstraintLayout>